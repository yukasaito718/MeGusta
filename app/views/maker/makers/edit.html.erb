<body><main>
	<div class="container">
		<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6 text-font">
					<!--メッセージ-->
					<% if flash[:notice] %>
      				<div class="alert alert-danger">
			        <%= flash[:notice] %>
				      </div>
				    <% end %>
					<h2>Maker Profile 編集 </h2>
					<div class="user-profile-text panel panel-primary box-shadow">
						<div class="form-inline">

							<%= form_for current_maker do |f| %>
							<h3>本社名</h3>
							<span><%= f.text_field :name, class:'form-control', placeholder:"※空欄不可" %></span>
							<h3>ふりがな</h3>
							<span><%= f.text_field :name_hurigana, class:'form-control', placeholder:"姓 ※全角文字のみ" %></span>
						</div>
					        <label>画像</label>
					        <br>
					          <%= f.attachment_field :image, size: "100x100", fallback: "no_image.jpg" %>
					        <br>
							<h3>郵便番号</h3>
							<div><%= f.text_field :postal_code, class:'form-control', placeholder:"半角数字　ハイフンなし" %></div>
							<h3>住所</h3>
							<div><%= f.text_field :street_address, class:'form-control', placeholder:"東京都渋谷区神南１丁目１９−１１ パークウェースクエア2 4階" %></div>
							<h3>電話番号</h3>
							<div><%= f.text_field :phone_number, class:'form-control', placeholder:"半角数字　ハイフンなし" %></div>
							<h3>メールアドレス</h3>
							<div><%= f.text_field :email, class:'form-control', placeholder:"me@gusta.com" %></div>
							<br>
							<br>
							<%= f.submit "保存", class: "btn btn-primary" %>
							<%= link_to "戻る", makerpage_path(current_maker), class: "btn btn-default" %>
						</div>
						<% end %>
					</div>
				</div>

		</div>
	</div>
</main>
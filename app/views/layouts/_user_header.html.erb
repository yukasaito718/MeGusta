
<header>
  <%= link_to root_path do%>
  <div class="site-logo">
  </div>
  <% end %>
  <% if user_signed_in? %>
  <div class="welcome-text">
    ようこそ、<%= current_user.name %>さん！！
  </div>
  <% else %>
  <% end %>


  <% if user_signed_in? %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
  <div class="inner">
    <form id="searchform">
      <%= form_tag user_items_path, method: :get do %>
      <%= text_field_tag :keywords, '',{id:'text',type:'text',placeholder:'検索キーワード'} %>
      <%= submit_tag '' , :item_name => nil %>
      <% end %>
    </form>
    <a href="#" class="search-btn"><i class="fa fa-search"></i></a>
  </div>
  <li class="nav-list-item-right">
    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "link-decoration" %>
  </li>
  <li class="nav-list-item-left">
    <span class="glyphicon glyphicon-record" aria-hidden="true"></span>
    <%= link_to "商品一覧", user_items_path, class: "link-decoration" %>
  </li>
  <li class="nav-list-item-left">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= link_to "マイページ", user_mypage_path, class: "link-decoration" %>
  </li>
  <% else %>
  <li class="nav-list-item-right2">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%= link_to "会員登録", new_user_registration_path, class: "link-decoration" %>
  </li>
  <li class="nav-list-item-right">
    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
    <%= link_to "ログイン", new_user_session_path, class: "link-decoration" %>
  </li>
  <li class="nav-list-item-left">
    <span class="glyphicon glyphicon-record" aria-hidden="true"></span>
    <%= link_to "商品一覧", user_items_path, class: "link-decoration" %>
  </li>
  <li class="nav-list-item-left">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= link_to "マイページ", user_mypage_path, class: "link-decoration" %>
  </li>
  <% end %>

</header>
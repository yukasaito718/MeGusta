		<% if flash[:notice] %>
		<p class="text-font notice"><%= flash[:notice] %></p>
		<% end %>
		<div class="item_show_box">
			<div class="item_show_textbox">
				<h2 class="rank_text_color">PROFILE</h2> 
					<div class ="ander-line"></div>
						<div class="item_text">
							<!-- [:user, @user] -->
							<%= form_for current_user do |f| %>
							<div class="space">
								<span class="item_name">User Name：</span>
								<%= f.text_field :name, class:'form-control', placeholder:"※空欄不可" %>
							</div>
							<div class="space">
								<span class="item_name">お名前（姓・名）：</span>
								<%= f.text_field :last_name, class:'form-control', placeholder:"姓 ※全角文字のみ" %>
								<%= f.text_field :first_name, class:'form-control', placeholder:"名　※全角文字のみ"  %>
							</div>
							<div class="space">
								<span class="item_name">お名前（フリガナ）：</span>
								<%= f.text_field :last_name_katakana, class:'form-control', placeholder:"セイ ※全角カタカナ" %>
								<%= f.text_field :first_name_katakana, class:'form-control', placeholder:"メイ　※全角カタカナ" %>
							</div>
							<div class="space">
								<span class="item_name">郵便番号：</span>
								<%= f.text_field :postal_code, class:'form-control', placeholder:"半角数字　ハイフンなし" %>
							</div>
							<div class="space">
								<span class="item_name">住所：</span>
								<%= f.text_field :street_address, class:'form-control', placeholder:"東京都渋谷区神南１丁目１９−１１ パークウェースクエア2 4階" %>
							</div>
							<div class="space">
								<span class="item_name">電話番号：</span>
								<%= f.text_field :phone_number, class:'form-control', placeholder:"半角数字　ハイフンなし" %>
							</div>
							<div class="space">
								<span class="item_name">メールアドレス：</span>
								<%= f.text_field :email, class:'form-control', placeholder:"me@gusta.com" %>
							</div>
							<br>
							<br>
							<div class="space">
							<%= f.submit "保存", class: "btn btn-primary" %>
							<%= link_to "戻る", mypage_path(current_user), class: "btn btn-default" %>
							</div>
						</div>
						<% end %>
					</div>
				</div>

		</div>
	</div>
</main>
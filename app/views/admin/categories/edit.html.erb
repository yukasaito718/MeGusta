

    <%= form_for [@category], url:admin_category_path do |f| %>
          <div class="row">
              <label >カテゴリー編集</label><br>
              <div class="col-xs-6">
				<%= f.text_field :name, class:'form-control', :placeholder => "例：会社用や贈り物" %>
              </div>
              	<div class="actions">
				<%= f.submit "カテゴリー編集", class: "btn btn-primary" %>
        <%= link_to "削除", admin_category_path(@category.id),method: :delete%>
				</div>
		<% end %>
          </div>
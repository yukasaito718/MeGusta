<div id="login">
  <h3 class="text-center text-white pt-5"></h3>
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column">
        <div id="login-box">
          <form id="login-form" class="form" action="" method="post">
            <h3 class="text-center text-info">Welcome</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <label for="username" class="text-info">Email:</label><br>
                <%= f.email_field :email, autofocus: true, class:'form-control', :placeholder => "Tell me email" %>
              </div>
              <div class="form-group">
                <label for="password" class="text-info">Password:</label><br>
                <%= f.password_field :password, class:'form-control', :placeholder => "Tell me password" %>
              </div>
              <div class="form-group">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
                <div class="actions">
                  <%= f.submit "Log in", class:'btn btn-info btn-outline-info',style:'width:550px' %>
                </div>
                <div id="register-link" class="text-right">
                 <%= render "users/shared/links" %>
                </div>
              </div>
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>